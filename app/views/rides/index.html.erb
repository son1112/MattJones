<h1>Schedule a Helicopter Hop</h1>

<table class="table">
  <thead>
    <tr>
      <th>Roundtrip</th>
      <th>Time start</th>
      <th>Time end</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.roundtrip %></td>
        <td><%= ride.time_start %></td>
        <td><%= ride.time_end %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


